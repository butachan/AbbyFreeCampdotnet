@model AbbyFreeCodeCamp.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" type="text" name="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" type="text" name="displayOrder" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

